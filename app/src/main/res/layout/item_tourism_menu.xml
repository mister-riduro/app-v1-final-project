<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="20dp">

    <ImageView
        android:id="@+id/menu_illustration"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/illustration_river"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/menu_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/plus_jakarta_sans_medium"
        android:lineHeight="16dp"
        android:text="@string/sungai"
        android:textColor="@color/text_grey_primary"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/menu_illustration"
        app:layout_constraintStart_toStartOf="@+id/menu_illustration"
        app:layout_constraintTop_toBottomOf="@id/menu_illustration" />

</androidx.constraintlayout.widget.ConstraintLayout>