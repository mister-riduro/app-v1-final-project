<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragments.profile.ProfilFragment">

    <TextView
        android:id="@+id/tab_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profil"
        android:textSize="20sp"
        android:fontFamily="@font/plus_jakarta_sans_bold"
        android:textColor="@color/text_grey_primary"
        android:lineSpacingMultiplier="0.2"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        android:background="@drawable/rectangle_gradient">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:paddingLeft="12dp"
            android:paddingTop="4dp"
            android:paddingRight="12dp"
            android:paddingBottom="4dp"
            android:background="@drawable/rounded_rectangle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profil Akun"
                android:textSize="12sp"
                android:textColor="@color/brand_primary"
                android:fontFamily="@font/plus_jakarta_sans_semibold"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/plus_jakarta_sans_semibold"
            android:lineSpacingMultiplier="0.2"
            android:text="Muhammad Ridlo"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="12sp"
            android:fontFamily="@font/plus_jakarta_sans_semibold"
            android:layout_marginTop="16dp"
            android:textColor="@color/white_secondary"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/tv_profile_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="@font/plus_jakarta_sans_regular"
            android:text="@string/dummy_text"
            android:textColor="@color/white"
            android:layout_marginTop="2dp"
            android:layout_marginStart="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lokasi"
            android:textSize="12sp"
            android:textColor="@color/white_secondary"
            android:fontFamily="@font/plus_jakarta_sans_semibold"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/tv_profile_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="@font/plus_jakarta_sans_regular"
            android:text="@string/dummy_text"
            android:textColor="@color/white"
            android:layout_marginTop="2dp"
            android:layout_marginStart="16dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_edit_profile"
            style="@style/Widget.Material3.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:text="Edit Profil"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            android:textSize="16sp"
            android:textColor="@color/text_grey_primary"
            app:iconTint="@color/text_grey_primary"
            app:icon="@drawable/icon_edit"
            app:iconGravity="textEnd"
            android:insetBottom="0dp"
            android:insetTop="0dp"/>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <ImageView
            android:id="@+id/iv_give_review"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_give_reviews"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_label_give_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Berikan Masukan"
            android:textColor="@color/text_grey_primary"
            android:fontFamily="@font/plus_jakarta_sans_semibold"
            android:textSize="14sp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/iv_give_review"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_desc_give_review"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Ayo beri masukan kepada kami untuk terus mengembangkan aplikasi."
            android:fontFamily="@font/plus_jakarta_sans_regular"
            android:textColor="@color/text_grey_tertiary"
            app:layout_constraintTop_toBottomOf="@id/tv_label_give_review"
            app:layout_constraintStart_toEndOf="@id/iv_give_review"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <ImageView
            android:id="@+id/iv_logout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_log_out"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_label_logoout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/plus_jakarta_sans_semibold"
            android:text="Keluar Akun"
            android:textColor="@color/text_grey_primary"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_logout"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>