<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="16dp">

    <ImageView
        android:id="@+id/iv_tourism_picture"
        android:layout_width="168dp"
        android:layout_height="176dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/image_detail_tumpak_sewu"
        android:scaleType="fitXY"
        android:background="@drawable/rounded_rectangle"
        android:clipToOutline="true"/>

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_tourism_type"
        android:text="@string/sungai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_tourism_picture"/>

    <TextView
        android:id="@+id/tv_ab_tourism_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chip_tourism_type"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Air Terjun Tumpak Sewu"
        android:layout_marginTop="12dp"
        android:textSize="14sp"
        android:fontFamily="@font/plus_jakarta_sans_semibold"
        android:textColor="@color/text_grey_primary"/>

    <TextView
        android:id="@+id/tv_ab_tourism_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_ab_tourism_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Lumajang Jawa Timur"
        android:textSize="12sp"
        android:fontFamily="@font/plus_jakarta_sans_regular"
        android:textColor="@color/text_grey_tertiary"
        android:layout_marginTop="4dp"/>

    <ImageView
        android:id="@+id/iv_ab_icon_rating"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_ab_tourism_location"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/icon_rating_yellow"/>

    <TextView
        android:id="@+id/tv_ab_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_grey_primary"
        android:text="4.5"
        android:textSize="12sp"
        android:fontFamily="@font/plus_jakarta_sans_regular"
        android:layout_marginTop="12dp"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@id/iv_ab_icon_rating"
        app:layout_constraintTop_toBottomOf="@id/tv_ab_tourism_location"/>


</androidx.constraintlayout.widget.ConstraintLayout>